#! /bin/bash

# 00_how_to_docker - 10
# Q: CreÃÅer un volume 'hatchery'

if [ "$1" = "-c" ] || [ "$1" = "--check" ]; then
    echo "$ docker volume ls"
    docker volume ls
	exit 1
fi

echo "$ docker volume create --name hatchery"
docker volume create --name hatchery

