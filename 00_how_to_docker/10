#! /bin/bash

# 00_how_to_docker - 10
# Q: CreÃÅer un volume 'hatchery'

NAME_VOL="hatchery"

set -o errexit

if [ "$#" -gt 0 ]; then
	if [ "$1" = "-u" ] || [ "$1" = "--undo" ]; then
		(set -x; docker volume rm $NAME_VOL)
	elif [ "$1" = "-c" ] || [ "$1" = "--check" ]; then
	    (set -x; docker volume ls)
	else
		echo Usage: "${0} [OPTION]"
		echo "-u   --undo"
		echo "-c   --check"
	fi
	exit 1
fi

set -o xtrace
docker volume create --name $NAME_VOL

# Sources:
# Storage: https://docs.docker.com/storage/
# Volumes: https://docs.docker.com/storage/volumes/
# docker volume --help